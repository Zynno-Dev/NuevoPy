@model IEnumerable<CrudCursoCore.Models.UsuarioModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crud Usuarios</h2>
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="fas fa-plus">New User</i></a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista Users</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaUsuarios" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m => m.Apellido)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                    </table>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                            <td>@Html.DisplayFor(m => item.Apellido)</td>
                            <td class="float-right" style="text-align:right">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                }
                else
                {
                    <p>No se encontraron usuarios</p>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{ 
    <script> //Call Db
        $(document).ready(function () {
            $('#tablaUsuarios').DataTable
        });
    </script>
}
